<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantryAddView">

    <ImageButton
        android:id="@+id/backButton2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#4CAF50"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/pantryList"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator"
        tools:layout_editor_absoluteX="45dp" />

    <Spinner
        android:id="@+id/pantryItems"
        android:layout_width="409dp"
        android:layout_height="67dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="372dp"
        android:background="#23B7BDB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton2" />

    <Button
        android:id="@+id/addItemButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="299dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#4CAF50"
        android:text="+"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="462dp" />

</androidx.constraintlayout.widget.ConstraintLayout>