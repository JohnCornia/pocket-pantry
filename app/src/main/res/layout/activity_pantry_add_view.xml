<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantryAddView">

    <ImageButton
        android:id="@+id/backButton2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="285dp"
        android:backgroundTint="#4CAF50"
        android:tint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <Spinner
        android:id="@+id/pantryItems"
        android:layout_width="409dp"
        android:layout_height="67dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="233dp"
        android:background="#23B7BDB7"
        app:layout_constraintBottom_toTopOf="@+id/addItemButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/addItemButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="285dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#4CAF50"
        android:text="+"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="124dp"
        android:layout_height="78dp"
        android:backgroundTint="#2F000000"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="444dp" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="124dp"
        android:layout_height="78dp"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="444dp" />

    <TextView
        android:id="@+id/quantityText"
        android:layout_width="118dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Quantity"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="391dp" />

    <TextView
        android:id="@+id/WeightText"
        android:layout_width="118dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Weight"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="391dp" />

</androidx.constraintlayout.widget.ConstraintLayout>